{
        "spec": {
            "containers": [
                {
                    "image":"docker-registry.default.svc:5000/perrsi-tools/jmeter-oracle-cursor:latest",
                    "name": "jmeter",
                    "volumeMounts": [{
                        "mountPath": "/src/output",
                        "name": "jmeter-output"
                    },
                    {
                      "mountPath": "/src/wallet",
                      "name": "jmeter-wallet"
                    }],
                    "env":[
                      {
                        "name": "CONNECTION_URL",
                        "valueFrom": {"secretKeyRef": {"name":"jmeter-oradb-info", "key":"CONNECTION_URL"}}
                      },
                      {
                        "name": "CONNECTION_USER",
                        "valueFrom": {"secretKeyRef": {"name":"jmeter-oradb-info", "key":"CONNECTION_USER"}}
                      },
                      {
                        "name": "CONNECTION_PASS",
                        "valueFrom": {"secretKeyRef": {"name":"jmeter-oradb-info", "key":"CONNECTION_PASS"}}
                      },                      
                      {
                        "name": "TABLE_NAME",
                        "valueFrom": {"secretKeyRef": {"name":"jmeter-oradb-info", "key":"TABLE_NAME"}}
                      }
                    ],
                    "resources":{
                      "requests": {"cpu": 0, "memory": 0},
                      "limits": {"cpu": 0, "memory": 0}
                    }
                }
            ],        
            "volumes": [
                {
                    "name": "jmeter-output",
                    "persistentVolumeClaim": {
                        "claimName": "jmeter-oradb-output"
                    }
                },
                {
                  "name": "jmeter-wallet",
                  "secret": {
                    "defaultMode": 420,
                    "secretName": "jmeter-oradb-wallet"
                  }
                }
            ]
        }
}